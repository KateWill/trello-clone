<section class="boards container">
  <h1> Trello Clone on Rails </h1>


  <h2>My Boards</h2>
  <% @boards.each do |board| %>
    <div class="board-index-link"><a href="boards/<%= board.id %>"><%= board.name %></a></div>


    <article class="new-board-form">
   <h3>Create a new board</h3>
   <%= form_for @board do |f| %>
     <%= f.label :name %>
       <%= f.text_field :name, class: "new-board-name" %><br>
       <%= f.submit "Create", class: "create-board" %>
   <% end %>
   </article>

<% else %>
 <h3 class="sign-in-notice">Log in or register to see your boards!</h3>
</section>
<% end %>
